<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/warm_grey" />

            <padding
                android:top="0dp"
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp" />

            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"/>

            <solid android:color="@color/warm_grey"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#ff0066" />

            <padding
                android:top="0dp"
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp" />

            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"/>

            <solid android:color="#ff0066"/>
        </shape>
    </item>
</selector>